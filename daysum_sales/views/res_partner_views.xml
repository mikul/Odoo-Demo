<?xml version="1.0"?>
<odoo>

	<record id="custom_weight_res_partner_view_buttons" model="ir.ui.view">
		<field name="name">custom.weight.res.partner.view.buttons</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="priority" eval="3"/>
		<field name="arch" type="xml">
			<div name="button_box" position="inside">
				<button class="oe_stat_button" type="object" name="action_view_invoice_total_weight"
					groups="sales_team.group_sale_salesman"
					icon="fa-tachometer">
					<field string="Weight" name="invoice_total_weight_count" widget="statinfo"/>
				</button>
			</div>

		</field>
	</record>

</odoo>