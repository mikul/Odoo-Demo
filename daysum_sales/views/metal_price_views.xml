<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="metal_price_view_tree" model="ir.ui.view">
			<field name="name">metal.price.tree</field>
			<field name="model">metal.price</field>
			<field name="arch" type="xml">
				<tree string="Metal Price Table" editable="top" create="1" delete="1" multi_edit="1">
					<field name="date"/>
					<field name="price"/>

				</tree>
			</field>
		</record>

		<record id="metal_price_action_default" model="ir.actions.act_window">
			<field name="name">Metal Price</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">metal.price</field>
			<field name="view_mode">tree</field>
			<field name="context">{}</field>
			<field name="view_id" ref="metal_price_view_tree"/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
				  Create a new metal price
				</p>
			</field>
		</record>		


		<menuitem
			action="metal_price_action_default"
			id="menu_metal_price"
			sequence="4"
			parent="account.account_invoicing_menu"/>
	</data>
</odoo>